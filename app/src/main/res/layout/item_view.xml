<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/item_rounded_background">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/shopping"
        android:layout_marginStart="8dp"
        android:background="@drawable/item_rounded_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grocery Shopping"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/inter_semi_bold"
        app:layout_constraintStart_toEndOf="@id/item_image"
        app:layout_constraintTop_toTopOf="@id/item_image"
        app:layout_constraintEnd_toStartOf="@id/item_amount"
        app:layout_constraintBottom_toTopOf="@id/item_date"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rs. 1200"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="@font/inter_semi_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_heading"/>

    <TextView
        android:id="@+id/item_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:maxLines="1"
        android:text="08 Dec 2025"
        android:textColor="#808080"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_heading"
        app:layout_constraintStart_toStartOf="@+id/item_heading" />

</androidx.constraintlayout.widget.ConstraintLayout>
